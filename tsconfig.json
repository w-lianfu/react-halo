{
  "compilerOptions": {
    "baseUrl": ".",
    "target": "es5",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext",
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react",
    "noUnusedLocals": true,
    "experimentalDecorators": true,
    "paths": {
      "@/*": ["src/*"],
      "@common/*": ["src/common/*"],
      "@commonComp/*": ["src/common/components/*"],
      "@commonScss/*": ["src/common/scss/*"],
      "@commonStore/*": ["src/common/store/*"],
      "@commonStyled/*": ["src/common/styled/*"],
      "@comp/*": ["src/components/*"],
      "@scss/*": ["src/scss/*"],
      "@store/*": ["src/store/*"],
      "@util/*": ["src/util/*"],
      "@route/*": ["src/util/routes/*"],
      "@tool/*": ["src/util/tools/*"],
      "@themeConfig/*": ["src/util/theme-config/*"],
      "@lib/*": ["src/util/lib/*"],
      "@static/*": ["src/static/*"],
      "@icon/*": ["src/static/icon/*"],
      "@image/*": ["src/static/image/*"],
      "@doc/*": ["src/doc/*"],
    },
  },
  "include": [
    "src",
  ],
  "exclude": [
    "node_modules",
    "build",
  ],
}
